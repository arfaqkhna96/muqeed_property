<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="agent_registration_form_template" name="Agent Registration Form">
        <t t-call="website.layout">
            <style>
                /* Main form container with a modern style */
                .form-container {
                background-color: #f5f5f5;
                max-width: 400px;
                margin: auto;
                border-radius: 12px;
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
                padding: 20px;
                transform: scale(1);
                animation: fadeInUp 1s ease-in-out forwards;
                }
                .navbar-nav .nav-link.active, .navbar-nav .show .nav-link {
                border-bottom: 2px solid #FF6040;
                }

                .navbar-nav .nav-link.active, .navbar-nav .nav-link.show {
                color:#FF6040;!important
                }

                /* Fade-in animation for the form */
                @keyframes fadeInUp {
                0% {
                opacity: 0;
                transform: translateY(20px);
                }
                100% {
                opacity: 1;
                transform: translateY(0);
                }
                }

                /* Label and input field styling */
                .label {
                font-family: 'Arial', sans-serif;
                color: #333;
                font-weight: 600;
                font-size: 1rem;
                margin-bottom: 10px;
                }

                .input-field {
                border-radius: 10px;
                border: 1px solid #ddd;
                padding: 12px;
                font-size: 1rem;
                width: 100%;
                margin-bottom: 20px;
                transition: border-color 0.3s ease, box-shadow 0.3s ease;
                }

                /* Focus effect on input fields */
                .input-field:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.4);
                outline: none;
                }

                /* Button styling with hover effects */
                .btn-submit {
                background-color: #FF6040;
                color: #fff;
                padding: 12px 30px;
                border-radius: 30px;
                border: none;
                font-size: 1.1rem;
                cursor: pointer;
                transition: all 0.3s ease;
                }

                .btn-submit:hover {
                background-color: #FF6040;
                transform: translateY(-3px);
                }

                /* Heading styling */
                h2 {
                font-family: 'Arial', sans-serif;
                font-size: 2rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 30px;
                }

                /* Adding padding to form fields */
                .form-group {
                margin-bottom: 20px;
                }

                /* Mobile responsiveness */
                @media (max-width: 768px) {
                .form-container {
                width: 90%;
                }

                h2 {
                font-size: 1.8rem;
                }
                }
            </style>

            <div class="container mt-5">
                <h2 class="text-center">Agent Registration Form</h2>
                <div class="form-container d-flex justify-content-center align-items-center">
                    <form action="/agent/submit_registration" method="post" class="mt-4 form-shadow p-4 rounded">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <label for="name" class="label">Agent Name</label>
                            <input type="text" name="name" id="name" class="form-control input-field" required="True"/>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="label">Phone</label>
                            <input type="tel" name="phone" id="phone" class="form-control input-field" required="True"/>
                        </div>
                        <div class="form-group">
                            <label for="email" class="label">Email</label>
                            <input type="email" name="email" id="email" class="form-control input-field"
                                   required="True"/>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
    <template id="registration_successful" name="Registration Successful">
        <style>
            @keyframes fadeIn {
            0% {
            opacity: 0;
            transform: translateY(20px);
            }
            100% {
            opacity: 1;
            transform: translateY(0);
            }
            }
        </style>
        <div class="container mt-5" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-in-out;
        max-width: 600px;
        margin: auto;">
            <h2 style="
            font-family: Arial, sans-serif;
            color: #2c3e50;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;">
                Registration Successful
            </h2>
            <p style="
            font-family: Arial, sans-serif;
            color: #7f8c8d;
            font-size: 1.2rem;
            text-align: center;
            line-height: 1.6;">
                A verification email has been sent to
                <span style="
                color: #3498db;
                font-weight: bold;
                text-decoration: underline;">
                    <t t-esc="email"/>
                </span>
                . Please check your inbox.
            </p>
        </div>

    </template>


    <template id="invalid_email" name="Invalid Email">

        <style>
            @keyframes fadeIn {
            0% {
            opacity: 0;
            transform: translateY(20px);
            }
            100% {
            opacity: 1;
            transform: translateY(0);
            }
            }
        </style>
        <div class="container mt-5" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #fff5f5;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-in-out;
        max-width: 600px;
        margin: auto;">
            <h2 style="
            font-family: Arial, sans-serif;
            color: #e74c3c;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;">
                Invalid Email
            </h2>
            <p style="
            font-family: Arial, sans-serif;
            color: #c0392b;
            font-size: 1.2rem;
            text-align: center;
            line-height: 1.6;">
                The email address provided is invalid. Please try again.
            </p>
        </div>

    </template>


    <template id="email_verification_success" name="Email Verification Success">

        <style>
            @keyframes slideIn {
            0% {
            opacity: 0;
            transform: translateY(-20px);
            }
            100% {
            opacity: 1;
            transform: translateY(0);
            }
            }
        </style>
        <div class="container mt-5" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f0fdf4;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        animation: slideIn 1s ease-in-out;
        max-width: 600px;
        margin: auto;">
            <h2 style="
            font-family: Arial, sans-serif;
            color: #2ecc71;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;">
                Email Verified Successfully
            </h2>
            <p style="
            font-family: Arial, sans-serif;
            color: #27ae60;
            font-size: 1.2rem;
            text-align: center;
            line-height: 1.6;">
                Your email has been verified. You can now use the platform.
            </p>
            <a href="/" class="btn btn-primary" style="
                    display: inline-block;
                    padding: 12px 25px;
                    background-color: #007bff;
                    color: #fff;
                    font-size: 1rem;
                    font-weight: bold;
                    text-decoration: none;
                    border-radius: 8px;
                    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
                    transition: all 0.3s ease;
                    animation: bounce 1.5s infinite;">
                Go to Homepage
            </a>
        </div>

    </template>


    <template id="email_verification_failed" name="Email Verification Failed">
        <style>
            @keyframes fadeIn {
            0% {
            opacity: 0;
            transform: scale(0.9);
            }
            100% {
            opacity: 1;
            transform: scale(1);
            }
            }
        </style>
        <div class="container mt-5" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #fdf2f2;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-in-out;
        max-width: 600px;
        margin: auto;">
            <h2 style="
            font-family: Arial, sans-serif;
            color: #e74c3c;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;">
                Email Verification Failed
            </h2>
            <p style="
            font-family: Arial, sans-serif;
            color: #c0392b;
            font-size: 1.2rem;
            text-align: center;
            line-height: 1.6;">
                The email verification link is invalid or expired. Please try registering again.
            </p>
        </div>

    </template>


    <template id="email_already_verified" name="Email Already Verified">
        <t t-call="web.layout">
            <style>
                /* Animation for container sliding in */
                @keyframes slideIn {
                0% {
                opacity: 0;
                transform: translateY(-20px);
                }
                100% {
                opacity: 1;
                transform: translateY(0);
                }
                }

                /* Fade-in animation for text */
                @keyframes fadeIn {
                0% {
                opacity: 0;
                }
                100% {
                opacity: 1;
                }
                }

                /* Bounce animation for the button */
                @keyframes bounce {
                0%, 100% {
                transform: translateY(0);
                }
                50% {
                transform: translateY(-5px);
                }
                }

                /* Button hover effect */
                .btn-primary:hover {
                background-color: #0056b3;
                box-shadow: 0 6px 15px rgba(0, 91, 187, 0.5);
                transform: scale(1.05);
                }
            </style>
            <div class="container" style="
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: #f4f9ff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            animation: slideIn 1s ease-out;
            max-width: 600px;
            margin: 40px auto;">
                <div style="
                text-align: center;
                color: #007bff;
                font-family: Arial, sans-serif;">
                    <h2 style="
                    font-size: 2rem;
                    margin-bottom: 15px;
                    font-weight: bold;
                    animation: fadeIn 1.5s ease-in-out;">
                        Email Already Verified
                    </h2>
                    <p style="
                    font-size: 1.2rem;
                    color: #333;
                    margin-bottom: 20px;
                    line-height: 1.6;
                    animation: fadeIn 2s ease-in-out;">
                        Your email address has already been verified.
                    </p>
                    <a href="/" class="btn btn-primary" style="
                    display: inline-block;
                    padding: 12px 25px;
                    background-color: #007bff;
                    color: #fff;
                    font-size: 1rem;
                    font-weight: bold;
                    text-decoration: none;
                    border-radius: 8px;
                    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
                    transition: all 0.3s ease;
                    animation: bounce 1.5s infinite;">
                        Go to Homepage
                    </a>
                </div>
            </div>
        </t>

    </template>

    <template id="email_already_used" name="Email Already Used">
        <t t-call="web.layout">

            <style>
                /* Animation for container fading in */
                @keyframes fadeInDown {
                0% {
                opacity: 0;
                transform: translateY(-20px);
                }
                100% {
                opacity: 1;
                transform: translateY(0);
                }
                }

                /* Fade-in animation for text */
                @keyframes fadeIn {
                0% {
                opacity: 0;
                }
                100% {
                opacity: 1;
                }
                }

                /* Pulse animation for button */
                @keyframes pulse {
                0%, 100% {
                transform: scale(1);
                box-shadow: 0 4px 10px rgba(255, 153, 0, 0.3);
                }
                50% {
                transform: scale(1.05);
                box-shadow: 0 6px 15px rgba(255, 153, 0, 0.5);
                }
                }

                /* Button hover effect */
                .btn-primary:hover {
                background-color: #e68a00;
                box-shadow: 0 6px 15px rgba(230, 138, 0, 0.5);
                transform: scale(1.05);
                }
            </style>
            <div class="container" style="
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: #fff7e6;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            animation: fadeInDown 1s ease-out;
            max-width: 600px;
            margin: 40px auto;">
                <div style="
                text-align: center;
                color: #ff9900;
                font-family: Arial, sans-serif;">
                    <h2 style="
                    font-size: 2rem;
                    margin-bottom: 15px;
                    font-weight: bold;
                    animation: fadeIn 1.5s ease-in-out;">
                        Email Already Used
                    </h2>
                    <p style="
                    font-size: 1.2rem;
                    color: #333;
                    margin-bottom: 20px;
                    line-height: 1.6;
                    animation: fadeIn 2s ease-in-out;">
                        The email address you entered is already in use. Please use a different email address.
                    </p>
                    <a href="/agent/registration" class="btn btn-primary" style="
                    display: inline-block;
                    padding: 12px 15px;
                    background-color: #ff9900;
                    color: #fff;
                    font-size: 1rem;
                    font-weight: bold;
                    text-decoration: none;
                    border-radius: 8px;
                    box-shadow: 0 4px 10px rgba(255, 153, 0, 0.3);
                    transition: all 0.3s ease;
                    animation: pulse 1.5s infinite;">
                        Go to Registration
                    </a>
                </div>
            </div>
        </t>

    </template>

</odoo>
